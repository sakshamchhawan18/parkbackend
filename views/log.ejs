<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>ParkBackend | Vehicle</title>
</head>
<body>
    <style>
         body {
        background-color: antiquewhite;
        margin: 0;
        padding: 0;
    }
    header {background-color:coral;
            padding: 20px;
            color: #fff;
            text-align: center;}
            h1 {
            margin: 0;
            font-size: 24px;
        }

    h1 {
        text-align: center;
        margin-top: 20px;
    }

    table {
        margin: 20px auto;
        border-collapse: collapse;
        width: 80%;
    }

    th, td {
        padding: 10px;
        text-align: left;
        
    }

    th {
        background-color: #60bce7;
        font-weight: bold;
    }

    a.button {
            display: inline-block;
            padding: 10px 20px;
            text-decoration: none;
            background-color:coral;
            color: #fff;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        a.button:hover {
            background-color: rgb(84, 138, 3);
        }
    </style>
<header>
<h1>Parking system Backend | Log Book</h1>
</header>
<table>
    <tr>
        <td><a href="/" class="button">/home</a></td>
        <td><a href="/auth" class="button">/authentification</a></td>
        <td><a href="/v1/logout" class="button">/authentification/logout</a></td>
        <td><a href="/vehicle" class="button">/vehicle</a></td>
        <td><a href="/log" class="button">/logbook</a></td>
    </tr>
</table>
<table>
        <tr>
        <th>userId</th>
        <th>vehicleId</th>
        <th>parkingSpotId</th>
        <th>checkInTime</th>
        <th>checkOutTime</th>
        <th>duration</th>
    </tr>
    <% for(l of log){ %>
        <tr>
            <td><%= l.userId %></td>
            <td><%= l.vehicleId %></td>
            <td><%= l.parkingSpotId %></td>
            <td><%= l.checkInTime %></td>
            <td><%= l.checkOutTime %></td>
            <% if(l.duration){ %>
                <td><%= new Date(l.duration).getUTCHours() %>:<%= new Date(l.duration).getUTCMinutes() %>:<%= new Date(l.duration).getUTCSeconds() %></td>
            <% } %>
        </tr>
    <% } %>
</table>
</body>
